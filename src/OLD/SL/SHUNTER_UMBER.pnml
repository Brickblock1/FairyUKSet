	spriteset_SHUNTER_UMBER_flip ;
}

switch(FEAT_TRAINS, PARENT, sw_SHUNTER_UMBER_flipcheck_inv, vehicle_is_reversed){
	1: spriteset_SHUNTER_UMBER_flip;
	spriteset_SHUNTER_UMBER ;
}

