	1: visual_effect_and_powered(VISUAL_EFFECT_STEAM, -4, ENABLE_WAGON_POWER);
	visual_effect_and_powered(VISUAL_EFFECT_STEAM, 0, ENABLE_WAGON_POWER) ;
}

random_switch (FEAT_TRAINS, SELF, sw_SHUNTER_UMBER_randomflip_steam) {
	dependent:	sw_SHUNTER_UMBER_randomflip;
	1: sw_SHUNTER_UMBER_flipcheck_steam_inv;
	1: sw_SHUNTER_UMBER_flipcheck_steam;
}

