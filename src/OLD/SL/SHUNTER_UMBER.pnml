	1: sw_SHUNTER_UMBER_flipcheck;
	1: sw_SHUNTER_UMBER_flipcheck_inv;
}

switch(FEAT_TRAINS, PARENT, sw_SHUNTER_UMBER_flipcheck_steam, vehicle_is_reversed){
	1: visual_effect_and_powered(VISUAL_EFFECT_STEAM, 0, ENABLE_WAGON_POWER);
	visual_effect_and_powered(VISUAL_EFFECT_STEAM, -4, ENABLE_WAGON_POWER) ;
}

