//Sprite References & Switches
spriteset(spriteset_PANNIER_purchase, "gfx/STEAM/PANNIER.png") { template_fai_purchase(0, 0)}

spriteset(spriteset_PANNIER, "gfx/STEAM/PANNIER.png") { template_fai_21(0, 16)}
spriteset(spriteset_PANNIER_flip, "gfx/STEAM/PANNIER.png") { template_fai_21_r(0, 16)}

switch(FEAT_TRAINS, PARENT, sw_PANNIER_flipcheck, vehicle_is_reversed){
	1: spriteset_PANNIER;
	spriteset_PANNIER_flip ;
}

switch(FEAT_TRAINS, PARENT, sw_PANNIER_flipcheck_inv, vehicle_is_reversed){
	1: spriteset_PANNIER_flip;
	spriteset_PANNIER ;
}

random_switch (FEAT_TRAINS, SELF, sw_PANNIER_randomflip) {
	1: sw_PANNIER_flipcheck;
	1: sw_PANNIER_flipcheck_inv;
}

switch(FEAT_TRAINS, PARENT, sw_PANNIER_flipcheck_steam, vehicle_is_reversed){
	1: visual_effect_and_powered(VISUAL_EFFECT_STEAM, 0, ENABLE_WAGON_POWER);
	visual_effect_and_powered(VISUAL_EFFECT_STEAM, -4, ENABLE_WAGON_POWER) ;
}

switch(FEAT_TRAINS, PARENT, sw_PANNIER_flipcheck_steam_inv, vehicle_is_reversed){
	1: visual_effect_and_powered(VISUAL_EFFECT_STEAM, -4, ENABLE_WAGON_POWER);
	visual_effect_and_powered(VISUAL_EFFECT_STEAM, 0, ENABLE_WAGON_POWER) ;
}

random_switch (FEAT_TRAINS, SELF, sw_PANNIER_randomflip_steam) {
	dependent:	sw_PANNIER_randomflip;
	1: sw_PANNIER_flipcheck_steam_inv;
	1: sw_PANNIER_flipcheck_steam;
}
