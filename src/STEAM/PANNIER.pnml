		air_drag_coefficient:			0x1C nfo;
		misc_flags:						bitmask(TRAIN_FLAG_2CC, TRAIN_FLAG_SPRITE_STACK);
		dual_headed:					0;
		
		track_type:						RAIL;
		running_cost_base:				RUNNING_COST_STEAM;
		engine_class: 					ENGINE_CLASS_STEAM;
		ai_special_flag:				AI_FLAG_PASSENGER;
		
		name:							string(STR_NAME_PANNIER); 
		introduction_date:				date(1929,1,1);
		vehicle_life: 					40;
		model_life:						42;
		length:							5;
		
		weight: 						50 ton;
		speed:							45 mph;
		power:							500 hp;
		tractive_effort_coefficient: 	0x1F nfo;
		cost_factor: 					0x11 nfo;
		running_cost_factor: 			0x1A nfo;
		
	}
	graphics {
		default:						sw_PANNIER_randomflip;
		visual_effect_and_powered:		sw_PANNIER_randomflip_steam;
		sound_effect:					sw_sfx_steam;
		purchase:						spriteset_PANNIER_purchase;
		create_effect:					vfx_steam;
	}
}
