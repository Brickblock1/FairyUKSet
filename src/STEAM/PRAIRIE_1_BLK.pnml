switch(FEAT_TRAINS, PARENT, sw_PRAIRIE_1_BLK_flipcheck, vehicle_is_reversed){
	1: spriteset_PRAIRIE_1_BLK;
	spriteset_PRAIRIE_1_BLK_flip ;
}

switch(FEAT_TRAINS, PARENT, sw_PRAIRIE_1_BLK_flipcheck_inv, vehicle_is_reversed){
	1: spriteset_PRAIRIE_1_BLK_flip;
	spriteset_PRAIRIE_1_BLK ;
}

random_switch (FEAT_TRAINS, SELF, sw_PRAIRIE_1_BLK_randomflip) {
	1: sw_PRAIRIE_1_BLK_flipcheck;
	1: sw_PRAIRIE_1_BLK_flipcheck_inv;
}

switch(FEAT_TRAINS, PARENT, sw_PRAIRIE_1_BLK_flipcheck_steam, vehicle_is_reversed){
	1: visual_effect_and_powered(VISUAL_EFFECT_STEAM, 0, ENABLE_WAGON_POWER);
	visual_effect_and_powered(VISUAL_EFFECT_STEAM, -4, ENABLE_WAGON_POWER) ;
}

