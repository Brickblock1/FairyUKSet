		refit_cost:						0;
		climates_available:				ALL_CLIMATES;
		bitmask_vehicle_info:			0;
		air_drag_coefficient:			0x1C nfo;
		misc_flags:						bitmask(TRAIN_FLAG_2CC, TRAIN_FLAG_SPRITE_STACK);
		
		track_type:						RAIL;
		running_cost_base:				RUNNING_COST_STEAM;
		engine_class: 					ENGINE_CLASS_STEAM;
		ai_special_flag:				AI_FLAG_PASSENGER;
		
		name:							string(STR_NAME_PANNIER_II); 
		introduction_date:				date(1947,1,1);
		vehicle_life: 					40;
		model_life:						20;
		length:							5;
		
		weight: 						50 ton;
		speed:							45 mph;
		power:							500 hp;
		tractive_effort_coefficient: 	0x0C nfo;
		cost_factor: 					0x0F nfo;
		running_cost_factor: 			0x16 nfo;
		
	}
	graphics {
		default:						sw_PANNIER_II_randomflip;
		visual_effect_and_powered:		sw_PANNIER_II_randomflip_steam;
		sound_effect:					sw_sfx_STEAM;
		purchase:						spriteset_PANNIER_II_purchase;
		create_effect:					vfx_STEAM;
	}
}
