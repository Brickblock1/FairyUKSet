		bitmask_vehicle_info:			0;
		air_drag_coefficient:			0x17 nfo;
		misc_flags:						bitmask(TRAIN_FLAG_2CC, TRAIN_FLAG_SPRITE_STACK);
		
		track_type:						RAIL;
		running_cost_base:				RUNNING_COST_STEAM;
		engine_class: 					ENGINE_CLASS_STEAM;
		ai_special_flag:				AI_FLAG_CARGO;
		
		name:							string(STR_NAME_DOCKWORKER); 
		introduction_date:				date(1909,1,1);
		vehicle_life: 					40;
		model_life:						46;
		length:							7;
		
		weight: 						86 ton;
		speed:							55 mph;
		power:							600 hp;
		tractive_effort_coefficient: 	0x2C nfo;
		cost_factor: 					0x0E nfo;
		running_cost_factor: 			0x12 nfo;
		
	}
	graphics {
		default:						sw_DOCKWORKER_randomflip;
		visual_effect_and_powered:		sw_DOCKWORKER_randomflip_steam;
		sound_effect:					sw_sfx_STEAM;
		purchase:						spriteset_DOCKWORKER_purchase;
		create_effect:					vfx_STEAM;
	}
}
