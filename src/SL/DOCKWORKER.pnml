//Sprite References & Switches
spriteset(spriteset_DOCKWORKER_purchase, "gfx/SL/DOCKWORKER.png") { template_fai_purchase(0, 0)}

spriteset(spriteset_DOCKWORKER, "gfx/SL/DOCKWORKER.png") { template_fai_29(0, 16)}
spriteset(spriteset_DOCKWORKER_flip, "gfx/SL/DOCKWORKER.png") { template_fai_29_r(0, 16)}

switch(FEAT_TRAINS, PARENT, sw_DOCKWORKER_flipcheck, vehicle_is_reversed){
	1: spriteset_DOCKWORKER;
	spriteset_DOCKWORKER_flip ;
}

switch(FEAT_TRAINS, PARENT, sw_DOCKWORKER_flipcheck_inv, vehicle_is_reversed){
	1: spriteset_DOCKWORKER_flip;
	spriteset_DOCKWORKER ;
}

random_switch (FEAT_TRAINS, SELF, sw_DOCKWORKER_randomflip) {
	1: sw_DOCKWORKER_flipcheck;
	1: sw_DOCKWORKER_flipcheck_inv;
}

switch(FEAT_TRAINS, PARENT, sw_DOCKWORKER_flipcheck_steam, vehicle_is_reversed){
	1: visual_effect_and_powered(VISUAL_EFFECT_STEAM, 0, ENABLE_WAGON_POWER);
	visual_effect_and_powered(VISUAL_EFFECT_STEAM, -4, ENABLE_WAGON_POWER) ;
}

switch(FEAT_TRAINS, PARENT, sw_DOCKWORKER_flipcheck_steam_inv, vehicle_is_reversed){
	1: visual_effect_and_powered(VISUAL_EFFECT_STEAM, -4, ENABLE_WAGON_POWER);
	visual_effect_and_powered(VISUAL_EFFECT_STEAM, 0, ENABLE_WAGON_POWER) ;
}

random_switch (FEAT_TRAINS, SELF, sw_DOCKWORKER_randomflip_steam) {
	dependent:	sw_DOCKWORKER_randomflip;
	1: sw_DOCKWORKER_flipcheck_steam_inv;
	1: sw_DOCKWORKER_flipcheck_steam;
}

