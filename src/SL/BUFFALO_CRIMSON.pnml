spriteset(spriteset_BUFFALO_CRIMSON, "gfx/32bpp.png") { template_fai_21(0, 16)}
alternative_sprites(spriteset_BUFFALO_CRIMSON, ZOOM_LEVEL_NORMAL, BIT_DEPTH_32BPP, "gfx/SL/BUFFALO_CRIMSON.png") { template_fai_21(0, 16)}
spriteset(spriteset_BUFFALO_CRIMSON_flip, "gfx/32bpp.png") { template_fai_21_r(0, 16)}
alternative_sprites(spriteset_BUFFALO_CRIMSON_flip, ZOOM_LEVEL_NORMAL, BIT_DEPTH_32BPP, "gfx/SL/BUFFALO_CRIMSON.png") { template_fai_21_r(0, 16)}

switch(FEAT_TRAINS, PARENT, sw_BUFFALO_CRIMSON_flipcheck, vehicle_is_reversed){
	1: spriteset_BUFFALO_CRIMSON;
	spriteset_BUFFALO_CRIMSON_flip ;
}

switch(FEAT_TRAINS, PARENT, sw_BUFFALO_CRIMSON_flipcheck_inv, vehicle_is_reversed){
	1: spriteset_BUFFALO_CRIMSON_flip;
	spriteset_BUFFALO_CRIMSON ;
}

random_switch (FEAT_TRAINS, SELF, sw_BUFFALO_CRIMSON_randomflip) {
	1: sw_BUFFALO_CRIMSON_flipcheck;
	1: sw_BUFFALO_CRIMSON_flipcheck_inv;
}

switch(FEAT_TRAINS, PARENT, sw_BUFFALO_CRIMSON_flipcheck_steam, vehicle_is_reversed){
	1: visual_effect_and_powered(VISUAL_EFFECT_STEAM, 0, ENABLE_WAGON_POWER);
	visual_effect_and_powered(VISUAL_EFFECT_STEAM, -4, ENABLE_WAGON_POWER) ;
}

switch(FEAT_TRAINS, PARENT, sw_BUFFALO_CRIMSON_flipcheck_steam_inv, vehicle_is_reversed){
	1: visual_effect_and_powered(VISUAL_EFFECT_STEAM, -4, ENABLE_WAGON_POWER);
	visual_effect_and_powered(VISUAL_EFFECT_STEAM, 0, ENABLE_WAGON_POWER) ;
}

random_switch (FEAT_TRAINS, SELF, sw_BUFFALO_CRIMSON_randomflip_steam) {
	dependent:	sw_BUFFALO_CRIMSON_randomflip;
	1: sw_BUFFALO_CRIMSON_flipcheck_steam_inv;
	1: sw_BUFFALO_CRIMSON_flipcheck_steam;
}

